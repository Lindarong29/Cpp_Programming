{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "g++",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label":"execute",
			"command":"cmd",
			"group":"test",
			"args":["/C", "${fileDirname}\\${fileBasenameNoExtension}"]
		}
	]
}
